<h3><%= @wiki.title %></h3>
<hr>

<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>
  <% if current_user.present? %>
  <div class="col-md-4">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
  </div>
  <% end %>
  <br>
  <div class="col-md-3">
    <p style="font-size: 12px">Last updated on <%= @wiki.updated_at.strftime("%d %b, %Y @ %H:%M %Z") %></p>
  </div>
</div>
